#!/usr/bin/env bash

fg=c0caf5
wrong=db4b4b
date=7aa2f7
verify=7aa2f7
path=~/Pictures
i3lock -n --force-clock \
    -i "$path/hollow-knight-lock-screen.png" \
    -e --indicator --radius=20 --ring-width=40 --inside-color=$fg --ring-color=$fg --insidever-color=$verify --ringver-color=$verify --insidewrong-color=$wrong --ringwrong-color=$wrong --line-uses-inside --keyhl-color=$verify --separator-color=$verify --bshl-color=$verify --time-str="%H:%M" --time-size=140 --date-str="%a, %d %b" --date-size=45 --verif-text="Verifying Password..." --wrong-text="Wrong Password!" --noinput-text="" --greeter-text="Type the password to Unlock" \
    --ind-pos="550:580" --time-font="Fira Code Nerd Font:style=Bold" --date-font="Fira Code Nerd Font" --verif-font="Fira Code Nerd Font" --greeter-font="Fira Code Nerd Font" --wrong-font="Fira Code Nerd Font" --verif-size=23 --greeter-size=23 --wrong-size=23 \
    --time-pos="550:360" \
    --date-pos="550:420" \
    --greeter-pos="550:750" \
    --wrong-pos="550:790" \
    --verif-pos="550:625" --date-color=$date --time-color=$date --greeter-color=$fg --wrong-color=$wrong --verif-color=$verify --verif-pos="650:970" --pointer=default --refresh-rate=0 --pass-media-keys --pass-volume-keys --no-modkey-text

